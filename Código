<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Tabuada</title>
</head>
<body>
  <h2>Gerador de Tabuada</h2>

  <label>Digite um n√∫mero:</label>
  <input type="number" id="numero" required>
  <button onclick="gerarTabuada()">Gerar</button>

  <h3 id="titulo"></h3>
  <ul id="resultado"></ul>

  <script>
    function gerarTabuada() {
      const n = document.getElementById("numero").value;
      const lista = document.getElementById("resultado");
      const titulo = document.getElementById("titulo");

      lista.innerHTML = ""; // limpa resultados anteriores
      if (n === "") return;

      titulo.textContent = `Tabuada do ${n}`;
      
      for (let i = 1; i <= 10; i++) {
        const li = document.createElement("li");
        li.textContent = `${n} x ${i} = ${n * i}`;
        lista.appendChild(li);
      }
    }
  </script>
</body>
</html>
